<!--
约定documentList为文档列表数据集合
item为子元素集合
-->
<div class="post-list">
<%if(documentList.length>0){%>
    <%documentList.forEach(function(item){%>
	<div class="col-md-3 col-sm-3 col-xs-6">
		<div class="blog-list-item">
			<div class="item-Img">
				<a target="_blank" href="/details/<%=item._id%>.html">
					<img  class="img-responsive" alt="<%=item.title%>"  src="<%=item.sImg%>"></a>
			</div>
			<div class="item-des">
				<a href="/details/<%=item._id%>.html" target="_blank" class="item-title"><%=item.title%></a>
				<div class="item-time">
					<span><i class="fa fa-clock-o"></i><a><%=myDateFormat(item.date)%></a></span>
				</div>
				<div class="summary"><%= item.discription%></div>
			</div>
			<div class="item-more">
				<span><i class="fa fa-eye"></i><a><%=item.clickNum%></a></span>
				<span><i class="fa fa-comments-o"></i><a><%=item.commentNum%></a></span>
				<span><i class="fa fa-heart"></i><a>2</a></span>

				<%if(item.isTop == 1){%>
				<span class="fa fa-flag" title="列表推荐"></span>
				<%}%>

			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<%})%>
<%}else{%>
    <p class="text-center">暂无内容...</p>
<%}%>
</div>